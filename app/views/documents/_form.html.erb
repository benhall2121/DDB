<%= form_for(@document, :html => { :multipart => true }) do |f| %>
  <% if @document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
      <% @document.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'User' %><br />
    <%= f.select :user_id, current_company.users.all.collect {|us| [ us.name, us.id ] } %>
  </div>
  <div class="field">
    <%= f.label 'Document Type' %><br />
    <%= f.select :doctype_id, current_company.doctypes.all.collect {|dt| [ dt.name, dt.id ] } %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label 'Document File' %><br />
    <%= f.file_field :doc %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
