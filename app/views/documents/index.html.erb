<div class="page_header">
  <h1>Documents</h1>
</div>

<div>
  <% if current_company %>
    <%= link_to 'New Document', new_document_path %>
  <% end %>	
</div>

<div class="all_docs_wrapper">
<% @documents.each do |document| %>
  <div class="document_wrapper">
  	<%= link_to image_tag(document.doc.url(:small)), document.doc.url(:original) %><br/></br/>
  	<%= document.user.name unless document.user.nil?  %><br />
    <%= document.doctype.name unless document.doctype.nil? %><br />	
    <%= document.description %>
    
    <% if current_company %>
      <br /><%= link_to 'Edit', edit_document_path(document) %>
      <br /><%= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete %>
    <% end %>	
  </div>
<% end %>
</div>


