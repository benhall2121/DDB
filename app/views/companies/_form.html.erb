<script type="text/javascript">
$(document).ready(function() {
		
  $('.company_name').live('keyup', function(){
    var username = $(this).val().replace(/\s/g, '');	
    $('.company_username').val(username);			
  });
			
  $('.company_name').trigger('keyup');	
});
</script>


